<Window x:Class="RevitLevelsPlans.Assignment6.UI.LevelPlanPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate Floor Plan"
        Height="380"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid ItemsSource="{Binding Items}"
                  SelectedItem="{Binding Selected}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Grid.Row="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Level" Binding="{Binding LevelName}" Width="2*"/>
                <DataGridTextColumn Header="Plan"  Binding="{Binding PlanName}"  Width="3*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Margin="0,10,0,0">
            <Button Content="Activate" Width="100" Margin="0,0,10,0" IsDefault="True" Click="OnActivateClick"/>
            <Button Content="Cancel"   Width="80"  IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
