<Window x:Class="RevitLevelsPlans.Assignment7.UI.RoomWallsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Walls"
        Height="420"
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: Room info -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Room:" FontWeight="SemiBold" Margin="0,0,6,0"/>
            <TextBlock Text="{Binding RoomNumber}" Margin="0,0,12,0"/>
            <TextBlock Text="Name:" FontWeight="SemiBold" Margin="12,0,6,0"/>
            <TextBlock Text="{Binding RoomName}" Margin="0,0,12,0"/>
            <TextBlock Text="Level:" FontWeight="SemiBold" Margin="12,0,6,0"/>
            <TextBlock Text="{Binding RoomLevel}"/>
        </StackPanel>

        <!-- Walls list -->
        <DataGrid ItemsSource="{Binding Walls}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"        Binding="{Binding Id}"        Width="1*"/>
                <DataGridTextColumn Header="Name"      Binding="{Binding Name}"      Width="2*"/>
                <DataGridTextColumn Header="Type"      Binding="{Binding Type}"      Width="2*"/>
                <DataGridTextColumn Header="Level"     Binding="{Binding Level}"     Width="2*"/>
                <DataGridTextColumn Header="Length"    Binding="{Binding Length}"    Width="1.5*"/>
                <DataGridTextColumn Header="Thickness" Binding="{Binding Thickness}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
