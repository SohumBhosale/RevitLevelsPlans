<Window x:Class="RevitLevelsPlans.UI.LevelsPlansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Levels &amp; Floor Plans"
        Height="420" Width="760"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Topmost="True">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Levels, elevation (internal feet), and associated Floor Plan views"
                   FontWeight="Bold" Margin="0,0,0,8"/>

        <DataGrid Grid.Row="1" x:Name="dgLevels"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserSortColumns="True"
                  HeadersVisibility="Column"
                  Margin="0,0,0,8" SelectionChanged="dgLevels_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Level Name" Binding="{Binding LevelName}" Width="2*"/>
                <DataGridTextColumn Header="Elevation (ft)" Binding="{Binding ElevationFeet, StringFormat=F3}" Width="*"/>
                <DataGridTextColumn Header="Floor Plans" Binding="{Binding PlansJoined}" Width="3*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Copy" Margin="0,0,8,0" Padding="10,4" Click="OnCopy"/>
            <Button Content="Close" Padding="10,4" Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>
