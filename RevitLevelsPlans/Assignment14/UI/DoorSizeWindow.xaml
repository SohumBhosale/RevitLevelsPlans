<!-- File: Assignment14/UI/DoorSizeWindow.xaml -->
<Window x:Class="RevitLevelsPlans.Assignment14.UI.DoorSizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Door Width / Height"
        Height="220"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Summary}"
                   FontWeight="SemiBold" FontSize="13"/>

        <!-- Width row -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Width:" VerticalAlignment="Center"/>
            <TextBox  Grid.Column="2" Text="{Binding NewWidth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ToolTip="Enter width in project display units (e.g., mm/inch)"/>
        </Grid>

        <!-- Height row -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Height:" VerticalAlignment="Center"/>
            <TextBox  Grid.Column="2" Text="{Binding NewHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      ToolTip="Enter height in project display units (e.g., mm/inch)"/>
        </Grid>

        <!-- Apply -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <CheckBox Content="Instance" IsChecked="{Binding ApplyToInstance}" Margin="0,0,12,0"/>
            <CheckBox Content="Type"     IsChecked="{Binding ApplyToType}"    Margin="0,0,24,0"/>
            <Button Content="Apply" Width="100" Click="OnApplyClick"/>
        </StackPanel>
    </Grid>
</Window>
