<Window x:Class="RevitLevelsPlans.Assignment8.UI.ModelHierarchyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Model Hierarchy"
        Height="420"
        Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize">

    <Window.Resources>
        <!-- Keyed hierarchical template (no DataType) -->
        <HierarchicalDataTemplate x:Key="NodeTemplate"
                                  ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Name}" />
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Document ➜ Floor Plans"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <!-- Bind to ViewModel.Roots and use our keyed template -->
        <TreeView Grid.Row="1"
                  ItemsSource="{Binding Roots}"
                  ItemTemplate="{StaticResource NodeTemplate}" />
    </Grid>
</Window>
