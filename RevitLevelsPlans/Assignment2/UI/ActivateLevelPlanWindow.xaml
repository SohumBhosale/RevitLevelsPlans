<Window x:Class="RevitLevelsPlans.Assignment2.UI.ActivateLevelPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Activate Floor Plan"
        Height="200" Width="360"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select Level:" Margin="0,0,0,6" FontWeight="Bold"/>

        <ComboBox x:Name="cbLevels"
                  Grid.Row="1"
                  DisplayMemberPath="Name"
                  MinWidth="280"
                  IsEditable="False"
                  IsReadOnly="True"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Close" Padding="12,4" Click="OnClose"/>
            <Button Content="show" Padding="12,4" Margin="8,0,0,0" Click="OnShow"/>
        </StackPanel>
    </Grid>
</Window>